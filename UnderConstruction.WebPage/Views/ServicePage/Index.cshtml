@model IPageViewModel<ServicePage>

<section class="container">
    <h1 class="heading" @Html.EditAttributes(m => m.CurrentPage.Heading)>
        @(Model.CurrentPage.Heading ?? Model.CurrentPage.MetaTitle ?? Model.CurrentPage.Name)
    </h1>
    <div class="row">
        <div class="col-md-8">
            @Html.PropertyFor(x => x.CurrentPage.MainBody)
        </div>
        <div class="col-md-4">
            @Html.PropertyFor(m => m.CurrentPage.WorkSpecs)
        </div>
    </div>
</section>

@Html.PropertyFor(m => m.CurrentPage.MainContentArea)