@using EPiServer.Core
@using EPiServer.SpecializedProperties
@model CarouselBlock

@{
    string carouselId = Guid.NewGuid().ToString("N");

    int? first = null;
    if (Model.CarouselItems != null)
    {
        var item = Model.CarouselItems.FilteredItems.FirstOrDefault();
        if (item != null)
        {
            first = item.ContentLink.ID;
        }
    }
}

<section class="home">
    <!-- Carousel -->
    <div class="carousel slide" data-ride="carousel" id="@carouselId">
        <!-- Carousel-inner -->
        <div class="carousel-inner" role="listbox"
             @Html.EditAttributes(m => m.CarouselItems)>
            @Html.DisplayFor(m => m.CarouselItems, new { first })
        </div><!-- Carousel-inner end -->
        <!-- Controls -->
        <a class="left carousel-control" href="#@carouselId" role="button" data-slide="prev">
            <span class="fa fa-angle-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#@carouselId" role="button" data-slide="next">
            <span class="fa fa-angle-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div><!-- Carousel end-->

</section>