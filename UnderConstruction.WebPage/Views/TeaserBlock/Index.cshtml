@model TeaserBlockViewModel

<section>
    <div class="container">
        <div class="row">
            <div class="col-lg-7 col-md-6">
                <div class="about_content">
                    <h2 @Html.EditAttributes(m => m.CurrentBlock.TeaserHeading)>
                        @Html.DisplayFor(m => m.CurrentBlock.TeaserHeading)
                    </h2>
                    <div @Html.EditAttributes(m => m.CurrentBlock.TeaserText)>
                        @Html.DisplayFor(m => m.CurrentBlock.TeaserText)
                    </div>
                    <div @Html.EditAttributes(m => m.CurrentBlock.TeaserLink)>
                        @Html.DisplayFor(m => m.CurrentBlock.TeaserLink, new { ChildrenCssClass = "btn know_btn" })
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-6 col-lg-offset-1">
                <div class="about_banner" @Html.EditAttributes(m => m.CurrentBlock.TeaserImage)>
                    @Html.DisplayFor(m => m.CurrentBlock.TeaserImage)
                </div>
            </div>
        </div>
    </div>
</section>